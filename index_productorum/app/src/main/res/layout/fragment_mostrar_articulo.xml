<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey">


    <TextView
        android:id="@+id/tv_NomArticle"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="70dp"
        android:background="@color/Wheat"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <TextView
        android:id="@+id/tv_Categoria"
        android:layout_width="277dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/back_border"
        android:contentDescription="@string/google_app_id"
        android:padding="5dp"
        android:popupBackground="@color/AliceBlue"
        app:layout_constraintEnd_toEndOf="@+id/tv_NomArticle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_NomArticle"
        app:layout_constraintTop_toBottomOf="@+id/tv_NomArticle" />

    <TextView
        android:id="@+id/tv_Precio"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="96dp"
        android:background="@color/Wheat"
        android:ems="10"
        android:hint="Precio"
        android:inputType="numberDecimal|number"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_Descripcion"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="278dp"
        android:layout_height="190dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="21dp"
        android:background="@color/AliceBlue"
        app:layout_constraintBottom_toTopOf="@+id/tv_Precio"
        app:layout_constraintEnd_toEndOf="@+id/tv_Descripcion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_Descripcion"
        app:layout_constraintTop_toBottomOf="@+id/tv_Descripcion"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/articulos" />

    <TextView
        android:id="@+id/tv_Descripcion"
        android:layout_width="278dp"
        android:layout_height="65dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="69dp"
        android:background="@color/Wheat"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Categoria" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="232dp"
        android:background="@color/Beige"
        android:padding="5dp"
        android:rotation="-33"
        android:rotationX="0"
        android:rotationY="0"
        android:text="Articulo selecionado"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_NomArticle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

</androidx.constraintlayout.widget.ConstraintLayout>
