<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:tooltipText="Precios"
    android:tooltipText="Precio"
    android:background="@color/LightSkyBlue"
    tools:context=".ui.fragment.articulo.ConsultarPreciosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/searchViewPrecio"
            android:layout_width="157dp"
            android:layout_height="43dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="14dp"
            android:iconifiedByDefault="false"
            android:queryHint="buscar"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewPrecios"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPrecios"
            android:layout_width="311dp"
            android:layout_height="459dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="85dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchViewPrecio"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:background="@color/black"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="97dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="69dp"
            android:text="Precios de productos"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>